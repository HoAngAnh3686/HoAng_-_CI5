<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc.ss10.PayEndFragment"
    android:background="#69F0AE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Payment \nsuccessful"
            android:textSize="18pt"
            android:gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="150dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_t1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_t1"
            android:text="40,000 $"
            android:textSize="18pt"
            android:layout_marginLeft="150dp"
            android:id="@+id/tv_t2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="RECEPIENT"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_t2"
            android:layout_marginLeft="150dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_t3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Lester Nygaard"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/tv_t4"
            android:layout_below="@+id/tv_t3" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="NOTE"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/tv_t5"
            android:layout_below="@+id/tv_t4" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="It was a humorously perilous\nbusine for both of us"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/tv_t6"
            android:layout_below="@+id/tv_t5" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_t6">

            <ImageView
                android:id="@+id/im_check"
                android:src="@drawable/check2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="140dp"
                android:layout_marginStart="140dp" />

            <ImageView
                android:src="@drawable/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_alignBottom="@+id/im_check"
                android:layout_alignLeft="@+id/im_check"
                android:layout_alignStart="@+id/im_check"
                android:layout_marginBottom="20dp" />
        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>
