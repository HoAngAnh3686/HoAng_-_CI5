<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abc.myapplication.DetailFragment">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="Choose color and size"
            android:textSize="25pt"
            android:gravity="center"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Colors"
            android:gravity="center"
            android:textSize="30pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/black"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/darkblue"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/lightblue"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/black"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Sizes"
            android:gravity="center"
            android:textSize="30pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="160dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/small"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/large"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/xl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:padding="10dp"
                android:src="@drawable/xl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="500dp"
                android:layout_height="80dp"
                android:background="#FF0000"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/addtocart"
                android:layout_width="500dp"
                android:layout_height="80dp"
                />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
